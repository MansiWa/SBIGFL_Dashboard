@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization
@inject IViewLocalizer Localizer;
@model IEnumerable<PrintSoftWeb.Models.CurrencyMasterModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="~/jsfiles/commonjs/commonjs.js"></script><!-- For Common Jquery-->
    <script src="~/jsfiles/currencymaster/currencymasterjst.js"></script>

</head> 
<div class="card shadow mb-4">
    <!--Start Header -->
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col">
                <h4 class="m-0 font-weight-bold text-primary">@Localizer["Currency Master"]</h4>
            </div>
            <div class="col-md-2 justify-content-lg-end justify-content-md-end justify-content-center mt-lg-0 mt-md-0 mt-3">
                <input type="text" id="custom-search" class="form-control" placeholder=@Localizer["Search"] />
            </div>
            <div class="col-auto d-flex flex-wrap toggle">
                <div class="form-check form-switch mt-lg-1 mt-md-1 mt-3 ml-2 ">
                    <input class="form-check-input" type="checkbox" id="toggleStatus" checked onclick="performAction()">
                    <label class="form-check-label" for="toggleStatus" data-on="On" data-off="Off"></label>
                </div>
                <button class="btn btn-md text-light bg-primary mt-3 mt-lg-0 mt-md-0 ml-2" type="button" title="Add Currency" data-bs-toggle="modal" data-bs-target="#addSubscription" onclick="return AddCurrency()" style="display:@Context.Session.GetString("AddAccess")"> <i class="fa fa-plus"></i>  </button>
                <button class="btn btn-md text-light bg-success mt-3 mt-lg-0 mt-md-0 ml-2" type="button" title="Excel" data-bs-toggle="modal" data-bs-target="#addSubscription" onclick="return Excel()">  <i class="fas fa-file-excel"></i> </button>
                <button class="btn btn-md text-light bg-danger mt-3 mt-lg-0 mt-md-0 ml-2" type="button" title="Pdf" data-bs-toggle="modal" data-bs-target="#addSubscription" onclick="return Pdf()"> <i class="fas fa-file-pdf"></i> </button>
            </div>
        </div>
    </div>
    <!--End  Header -->
    <!--Start Body -->
    <div class="card-body">
        <!-- start Griddata-->
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable1" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th width="6%">
                            @Localizer["Sr.No"]
                        </th>
                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.UserId)]
                        </th>
                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.cm_id)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.cm_currencyname)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.cm_currencycode)]
                        </th>
                        
                        <th style="display:none">
                            @Localizer[@Html.DisplayNameFor(model => model.cm_currencysymbol)]
                        </th>
                        <th>
                            @Localizer[@Html.DisplayNameFor(model => model.cm_currency_format)]
                        </th>
                        <th width="7%">
                            @Localizer[@Html.DisplayNameFor(model => model.cm_isactive)]
                        </th>
                        <th width="7%">@Localizer["Action"]</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int itemNumber = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @itemNumber
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.UserId)
                            </td>
                            <td style="display:none">
                                @Html.DisplayFor(modelItem => item.cm_id)
                            </td>
                            
                            <td onclick="GoToRate('@item.cm_id','@item.cm_currencyname')">
                                @Html.DisplayFor(modelItem => item.cm_currencyname)
                            </td>
                            <td onclick="GoToRate('@item.cm_id','@item.cm_currencyname')">
                                @Html.DisplayFor(modelItem => item.cm_currencycode)
                            </td>
                             <td style="display:none">
                                @Html.DisplayFor(modelItem => item.cm_currencysymbol)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cm_currency_format)
                            </td>
                            <td>
                                @* @Html.DisplayFor(modelItem => item.d_isactive)*@
                                <div class="form-check form-switch ml-auto active-toggle">
                                    @if (item.cm_isactive == "Active")
                                    {
                                        <input class="form-check-input ml-auto" type="checkbox" id="toggleSwitch" title="Active" checked onclick="ToggleSwitch('@item.cm_id','@item.cm_currencycode','@item.cm_currencyname','@item.cm_currencysymbol','@item.cm_currency_format','0')">
                                        <label class="form-check-label" for="toggleSwitch" data-on="On" data-off="Off"></label>
                                    }
                                    else
                                    {
                                        <input class="form-check-input ml-auto" type="checkbox" id="toggleSwitch" title="Inactive" onclick="ToggleSwitch('@item.cm_id','@item.cm_currencycode','@item.cm_currencyname','@item.cm_currencysymbol','@item.cm_currency_format','1')">
                                        <label class="form-check-label" for="toggleSwitch" data-on="On" data-off="Off"></label>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="d-inline-flex">
                                    <a class='editicon text-primary' title="Edit" onclick="editLinkClick('@item.cm_id','@item.cm_currencycode','@item.cm_currencyname','@item.cm_currencysymbol','@item.cm_currency_format','@item.cm_isactive')" style="display:@Context.Session.GetString("EditAccess")"> <span class='fas fa-edit'></span></a>
                                    <a href="@Url.Action("Delete", new { cm_id = @item.cm_id })" onclick="return confirm('Are you sure you want to delete?')" class='deleteicon text-danger' title="Delete" style="display:@Context.Session.GetString("DeleteAccess")"> <span class='fa fa-trash ml-2'></span></a>
                                </div>
                            </td>
                        </tr>
                        itemNumber++;
                    }
                </tbody>
            </table>
        </div>
        <!-- End Griddata-->
        <!-- start Pagination-->
        <div class="row mt-3">
            <div class="col-lg-5 col-md-5 col-12 ">
                <div class="row ">
                    <div class="col-lg-3 col-md-3 col-12 d-flex justify-content-lg-start justify-content-md-start justify-content-center ">
                        <h6 class="mt-2">@Localizer["Show"]</h6>&nbsp;&nbsp;
                        <select name="table_id_length" id="table_length_select" aria-controls="table_id" class="form-select w-auto">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        &nbsp;&nbsp;
                        <h6 class="mt-2">@Localizer["entries"]</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2"></div>
            <div class="col-lg-5 col-md-5 col-12 mt-lg-0 mt-md-0 mt-3">
                <nav aria-label="Page navigation example">
                    <div id="table_id_length">

                        <div id="custom-pagination" class=" d-flex text-center text-lg-end justify-content-end  text-end float-end">
                            <ul class="pagination justify-content-lg-end justify-content-md-end justify-content-center">
                                <li class="page-item disabled">
                                    <button class="page-link" href="#" aria-label="Previous" data-page="0"> <span aria-hidden="true">&laquo;</span></button>
                                </li>
                                <li class="page-item active"><button class="page-link" href="#" data-page="1">1</button></li>

                                <li class="page-item "><button class="page-link" href="#" data-page="2" aria-label="Next">  <span aria-hidden="true">&raquo;</span></button></li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- end Pagination-->
        <!-- start Modal-->
        <div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-md" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title text-dark" id="exampleModalLabel">@Localizer["Add Currency"]</h5>
                        <button type="button" class="btn-close bg-primary text-white" data-bs-dismiss="modal" aria-label="Close" onclick="CancelData()"></button>
                    </div>
                    <div class="modal-body text-dark">
                        <div class="form-group" style="display:none">
                            <label class="control-label">Id</label>
                            <input id="cm_id" class="form-control" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Code"]  <span class="text-danger">*</span></label>
                                    <input id="cm_currencycode" class="form-control" placeholder=@Localizer["Enter Code"] maxlength="10" onblur="trimInput()" />
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Name"] <span class="text-danger">*</span></label>
                                    <input id="cm_currencyname" class="form-control" placeholder=@Localizer["Enter Name"] maxlength="100" onblur="trimInput()" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Format"] <span class="text-danger">*</span></label>
                                    @*<input id="cm_currency_format" class="form-control" placeholder=@Localizer["Enter Format"] maxlength="100" onblur="trimInput()" />
                                    <span class="text-danger"></span>*@
                                    <select class="form-select mt-2" id="cm_currency_format" aria-label="Default select example">
                                        <option  selected value="">--Select--</option>
                                        <option value="en-US">en-US</option>
                                        <option value="da-DK">da-DK</option>
                                        <option value="en-GB">en-GB</option>
                                        <option value="ja-JP">ja-JP</option>
                                        <option value="en-IN">en-IN</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label fw-bold">@Localizer["Symbol"] <span class="text-danger">*</span></label>
                                    <input id="cm_currencysymbol" class="form-control" placeholder=@Localizer["Enter Symbol"] maxlength="10" onblur="trimInput()" />
                                    <span class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 ">
                                <div class="form-check ">
                                    <input class="form-check-input" type="checkbox" value="" id="cm_isactive" checked>
                                    <label class="form-check-label " for="cm_isactive">
                                        @Localizer["Is Active"]
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button title="Save" type="submit" id="btnsubmit" value="Create" class="btn btn-primary" onclick="submitCurrency()">@Localizer["Submit"]</button>
                        <button type="button" title="Close" class="btn btn-danger" data-dismiss="modal" onclick="CancelData()">@Localizer["Cancel"]</button>
                    </div>
                </div>
            </div>

        </div>
        <!-- end Modal-->
    </div>
    <!--End Body -->
</div>


<script>



    myFunction();
    $('#table_length_select').change();

</script>


