@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@inject IViewLocalizer Localizer;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Upload Report";
}
<head>
    <script src="~/jsfiles/commonjs/commonjs.js"></script>
    <script src="~/jsfiles/uploadreport/uploadreport.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
</head>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h4 class="m-0 font-weight-bold text-primary">@Localizer["Report Form"]</h4>
            </div>
        </div>
    </div>
    <form id="yourFormId" enctype="multipart/form-data">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <div class="row mt-3 mt-lg-0 mt-md-3">
                        <div class="col-lg-5">
                            <label for="Bank" class="form-label float-lg-end">@Localizer["Report Name"]:<span class="text-danger">*</span></label>
                        </div>
                        <div class="col-lg-7">
                            <input class="form-control" type="text" id="r_name"  placeholder="@Localizer["Enter Name"]" name="name" >
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row mt-3 mt-lg-0 mt-md-3">
                        <div class="col-lg-5">
                            <label for="category" class="form-label float-lg-end">@Localizer["Report Type"]:<span class="text-danger">*</span></label>
                        </div>
                        <div class="col-lg-7">
                            <select id="r_type" class="form-select" placeholder="@Localizer["Select Type"]"  aria-label="Default select example">
                                <option value="" selected>--Select--</option>
                                <option value="Portfolio_Analysys">Portfolio Analysys</option>
                                <option value="etc">etc</option>

                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-lg-6">
                    <div class="row">
                        <div class="col-lg-5">
                            <label   class="form-label float-lg-end">@Localizer["Date"]:<span class="text-danger">*</span></label>
                        </div>
                        <div class="col-lg-7">

                            <input class="form-control" type="date" id="r_date"  placeholder="@Localizer["Enter Name"]" name="name" >
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="row mt-3 mt-lg-0 mt-md-3">
                        <div class="col-lg-5">
                            <label for="remark" class="form-label float-lg-end">@Localizer["Remark"]:</label>
                        </div>
                        <div class="col-lg-7">
                            <input class="form-control" maxlength="500" id="r_remark" rows="3">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-4 ml-5">
                <div class="col-lg-8">
                    <div class="row mt-3 mt-lg-0 mt-md-3">
                        <div class="col-lg-3">
                            <label  class="form-label float-lg-end">@Localizer["Browse File"]:<span class="text-danger">*</span></label>
                        </div>
                        <div class="col-lg-9">
                            <input type="file" id="r_file" placeholder="@Localizer["Browse File"]" onchange="readURL(this);" name="browsefile"><spam style="color:red">.xls, .xlsx, .xlsm, .csv</spam><br />
                            <button type="button" class="mt-2 ml-2 btn-primary" onclick="viewFile()">View File</button> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-10 text-center m-5">
            <button title="Save" type="button" id="btnsubmit" value="Create" class="btn btn-primary" onclick="submitfile()">@Localizer["Submit"]</button>
            <button type="button" title="Clear" class="btn btn-secondary" data-dismiss="modal" onclick="ClrData()">@Localizer["Clear"]</button>
        </div>

    </form>
</div>
<div class="row mt-4">
    <div class="col-lg-6">
        <div id="fileContent"></div>
    </div>
</div>




